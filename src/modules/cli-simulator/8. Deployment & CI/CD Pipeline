# .github/workflows/deploy.yml
name: Deploy CCNA Mastery Platform

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v3
      
    - name: Setup Node.js
      uses: actions/setup-node@v3
      with:
        node-version: '18'
        
    - name: Install Dependencies
      run: npm ci
      
    - name: Lint Code
      run: npm run lint
      
    - name: Run Tests
      run: npm run test
      env:
        CI: true
        
    - name: Build Production Assets
      run: npm run build
      env:
        NODE_ENV: production
        
    - name: Upload Build Artifacts
      uses: actions/upload-artifact@v3
      with:
        name: build
        path: dist/
        
  deploy:
    needs: build
    runs-on: ubuntu-latest
    if: github.ref == 'refs/heads/main'
    steps:
    - name: Download Build Artifacts
      uses: actions/download-artifact@v3
      with:
        name: build
        path: dist/
        
    - name: Configure AWS Credentials
      uses: aws-actions/configure-aws-credentials@v1
      with:
        aws-access-key-id: ${{ secrets.AWS_ACCESS_KEY_ID }}
        aws-secret-access-key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
        aws-region: us-east-1
        
    - name: Deploy to S3
      run: |
        aws s3 sync dist/ s3://ccna-mastery-prod/ --delete
        aws cloudfront create-invalidation --distribution-id ${{ secrets.CLOUDFRONT_ID }} --paths "/*"
        
    - name: Update Version
      run: |
        echo "${{ github.sha }}" > dist/version.txt
        aws s3 cp dist/version.txt s3://ccna-mastery-prod/
        
    - name: Send Notification
      uses: slackapi/slack-github-action@v1
      with:
        payload: |
          {
            "text": "ðŸš€ CCNA Mastery Platform deployed successfully!",
            "blocks": [
              {
                "type": "section",
                "text": {
                  "type": "mrkdwn",
                  "text": "*CCNA Mastery Platform Deployed*\nVersion: ${{ github.sha }}\nEnvironment: Production"
                }
              },
              {
                "type": "context",
                "elements": [
                  {
                    "type": "mrkdwn",
                    "text": "Deployed by: ${{ github.actor }}"
                  }
                ]
              }
            ]
          }
      env:
        SLACK_WEBHOOK_URL: ${{ secrets.SLACK_WEBHOOK }}
